              "options": {
                "raw": { "language": "json" }
              }
            }
          }
        },
        {
          "name": "Login (get JWT)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:3003/api/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3003",
              "path": ["api", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"123456\"\n}",
              "options": {
                "raw": { "language": "json" }
              }
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.token) {",
                  "   pm.collectionVariables.set('JWT_TOKEN', json.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Books Service",
      "item": [
        {
          "name": "Get all books",
          "request": {
            "method": "GET",
            "header": [],
            "url": "http://localhost:3001/api/books"
          }
        },
        {
          "name": "Get book by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": "http://localhost:3001/api/books/{{BOOK_ID}}"
          }
        },
        {
          "name": "Create book",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{JWT_TOKEN}}" }
            ],
            "url": "http://localhost:3001/api/books",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Example Book\",\n  \"author\": \"Author Name\",\n  \"year\": 2024,\n  \"price\": 49.99\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Update book",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{JWT_TOKEN}}" }
            ],
            "url": "http://localhost:3001/api/books/{{BOOK_ID}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 29.99\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Delete book",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{JWT_TOKEN}}" }
            ],
            "url": "http://localhost:3001/api/books/{{BOOK_ID}}"
          }
        }
      ]
    },
